<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.microanswer.flappybird">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/lh"
        android:label="@string/app_name"
        android:name=".App"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      <activity android:name=".ScoreActivity" android:screenOrientation="portrait"/>
      <activity android:name=".NotSupportTipActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Dialog"/>
    </application>

</manifest>